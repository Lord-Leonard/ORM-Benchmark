{
    "compilerOptions": {
        "lib": [
            "es5",
            "es6",
            "ESNext"
        ],
        // "strict": true, muss auskommentiert sein f√ºr TypeORM
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "sourceRoot": "./src",
        "outDir": "./build",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "declaration": true
    },
    "include": ["src/**/*.ts"],
    "ts-node": {
        "esm": true,
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
